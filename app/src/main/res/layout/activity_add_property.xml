<!-- res/layout/activity_add_property.xml -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddPropertyActivity">

    <EditText
        android:id="@+id/propertyTypeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Property Type"/>

    <EditText
        android:id="@+id/ownerNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/propertyTypeEditText"
        android:layout_marginTop="8dp"
        android:hint="Owner Name"/>

    <EditText
        android:id="@+id/ownerContactEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ownerNameEditText"
        android:layout_marginTop="8dp"
        android:hint="Owner Contact"/>

    <EditText
        android:id="@+id/bedroomsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ownerContactEditText"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:hint="Bedrooms"/>

    <CheckBox
        android:id="@+id/kitchenCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bedroomsEditText"
        android:layout_marginTop="8dp"
        android:text="Kitchen Available"/>

    <EditText
        android:id="@+id/bathroomEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kitchenCheckBox"
        android:layout_marginTop="8dp"
        android:inputType="number"
        android:hint="Bathroom"/>

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bathroomEditText"
        android:layout_marginTop="8dp"
        android:hint="Description"/>

    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionEditText"
        android:layout_marginTop="8dp"
        android:hint="Address"/>

    <Button
        android:id="@+id/addPropertyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Property"
        android:layout_below="@id/addressEditText"
        android:layout_marginTop="16dp"/>
</RelativeLayout>
